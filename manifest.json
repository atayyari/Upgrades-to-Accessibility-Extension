{
    "manifest_version": 3,
    "name": "CSCE3444 Accessibility Extension", 
    "description": "A suite of accessibility features.", 
    "version": "0.1", 
    "author": "Ali, Garet, and Spencer",

    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ],

    "background": {
        "service_worker": [
            "background.js", 
            "backgroundContext.js", 
            "inject.js",
            "chrome.js",
            "common.js"
        ]
    },

    "browser_action": {

    },

    "permissions": [
        "storage",
        "contextMenus",
        "tts",
        "activeTab",
        "scripting"
    ],

    "options_page": "options.html",

    "action": {
        "default_title": "Magnifying Glass"
    },

    "commands": {
        "magnify": {
        "description": "Magnifying Glass",
        "suggested_key": {
            "default": "Alt+Shift+Z"
        }
        }
    }
}